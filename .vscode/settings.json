{
    "editor.fontFamily": "Fira Code",
    "editor.fontSize": 15,
    "editor.fontLigatures": true,
    "editor.glyphMargin": true,
    "editor.renderWhitespace": true,
    "files.eol": "\n",
    "json.schemas": [
        {
            "fileMatch": [
                "/global.json"
            ],
            "url": "http://json.schemastore.org/global"
        },
        {
            "fileMatch": [
                "/project.json"
            ],
            "url": "http://json.schemastore.org/project"
        }
    ],
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/bin": true,
        "**/obj": true,
        "**/*.lock.json": true
    }
}
