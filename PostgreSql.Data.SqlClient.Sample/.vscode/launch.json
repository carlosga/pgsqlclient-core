{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "justMyCode": false,
            "program": "/usr/bin/dotnet",
            "args": ["bin/Debug/netcoreapp1.0/PostgreSql.Data.SqlClient.Sample.dll"],
            "cwd": "${workspaceRoot}",
            "stopAtEntry": true
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processName": "<example>"
        }
    ]
}
