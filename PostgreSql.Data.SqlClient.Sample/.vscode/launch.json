{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "justMyCode": false,
            "program": "which dotnet",
            "args": ["${workspaceRoot}/bin/Debug/netcoreapp1.0/PostgreSql.Data.SqlClient.Sample.dll"],
            "cwd": "${workspaceRoot}/bin/Debug/netcoreapp1.0",
            "stopAtEntry": true
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processName": "<example>"
        }
    ]
}
