{
    "version": "0.0.1",
    "compilationOptions": {
        "emitEntryPoint": true,
        "allowUnsafe": false,
        "warningsAsErrors" : false
    },
    "frameworks": {
        "netstandard15": {   
            "imports" : "dnxcore50",        
            "dependencies": {                
                "NETStandard.Library": "1.5.0-rc3-*",
                "pgsqlclient": {
                    "target"  : "project",
                    "version" : "0.0.1"
                }
            }
        }
    },
    "configurations": {
        "Debug": {
            "compilationOptions": {
                "define": [
                    "DEBUG",
                    "TRACE"
                ]
            }
        },
        "Release": {
            "compilationOptions": {
                "define": [
                    "RELEASE",
                    "TRACE"
                ],
                "optimize": true
            }
        }
    },
    "compile": "**/*.cs"
}
