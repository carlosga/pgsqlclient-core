{
    "version": "0.0.1",
    "compilationOptions": {
        "emitEntryPoint": true,
        "allowUnsafe": false,
        "warningsAsErrors" : false,
        "languageVersion": "csharp6",
        "debugType": "portable"               
    },
    "frameworks": {
        "netstandard15": {           
            "dependencies": {
                "NETStandard.Library": "1.5.0-rc3-*",
                "pgsqlclient": {
                    "target"  : "project"            
                }
            }
        }
    },
    "configurations": {
        "Debug": {
            "compilationOptions": {
                "define": [
                    "DEBUG",
                    "TRACE"
                ]
            }
        },
        "Release": {
            "compilationOptions": {
                "define": [
                    "RELEASE",
                    "TRACE"
                ],
                "optimize": true
            }
        }
    },
    "compile": "**/*.cs"
}
