{
    "version": "0.0.1",
    "compilationOptions": {
        "emitEntryPoint": false,
        "allowUnsafe": false,
        "warningsAsErrors" : false       
    },
    "frameworks": {
        "netstandardapp1.5": {
            "imports":  "dotnet56",
            "dependencies": {                
                "NETStandard.Library": "1.5.0-rc3-*",
                "xunit": "2.1.0",
                "dotnet-test-xunit": "1.0.0-dev-*",
                "pgsqlclient": {
                    "target"  : "project",
                    "version" : "0.0.1"
                }
            }            
        }
    },
    "configurations": {
        "Debug": {
            "compilationOptions": {
                "define": [
                    "DEBUG",
                    "TRACE"
                ]
            }
        },
        "Release": {
            "compilationOptions": {
                "define": [
                    "RELEASE",
                    "TRACE"
                ],
                "optimize": true
            }
        }
    },
    "compile": "**/*.cs",
    "testRunner": "xunit"
}